# Server Configuration
PORT=3000
NODE_ENV=development
API_VERSION=v1

# CORS Configuration
CORS_ORIGIN=http://localhost:4200

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=agri_price_tracker
DB_USER=postgres
DB_PASSWORD=your_database_password
DATABASE_URL=postgresql://postgres:your_database_password@localhost:5432/agri_price_tracker

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_min_32_characters_long
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_min_32_characters_long
JWT_REFRESH_EXPIRES_IN=30d

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Email Service Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# SMS Service Configuration
SMS_MODE_API_KEY=your_sms_mode_api_key

# AI/ML Configuration
GEMINI_API_KEY=your_gemini_api_key
ML_MODEL_URL=http://localhost:8000

# Application URLs
FRONTEND_URL=http://localhost:4200
